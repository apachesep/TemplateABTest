	<version>0.0.2</version>
	<description>PLG_SYSTEM_TEMPLATEABTEST_XML_DESC</description>
    <scriptfile>templateabtest.script.php</scriptfile>

	<files>
		<filename plugin="templateabtest">templateabtest.php</filename>
		<filename>templateabtest.xml</filename>
	</files>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_templateabtest.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_templateabtest.sys.ini</language>
        <language tag="nl-NL">nl-NL/nl-NL.plg_system_templateabtest.ini</language>
        <language tag="nl-NL">nl-NL/nl-NL.plg_system_templateabtest.sys.ini</language>
    </languages>

	<config>
		<fields name="params">
			<fieldset name="templatestyles" label="Options">
				<field name="templatea"
					type="templatestyle"
					description="PLG_SYSTEM_TEMPLATEABTEST_TEMPLATEA_DESC"
					label="PLG_SYSTEM_TEMPLATEABTEST_TEMPLATEA_LBL">
				</field>
				<field name="templateb"
					type="templatestyle"
					description="PLG_SYSTEM_TEMPLATEABTEST_TEMPLATEB_DESC"
					label="PLG_SYSTEM_TEMPLATEABTEST_TEMPLATEB_LBL">
				</field>
			</fieldset>
		</fields>
	</config>
</extension>